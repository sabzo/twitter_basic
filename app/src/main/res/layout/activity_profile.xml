<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:minWidth="20dp"
        android:minHeight="20dp" />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfile"
        android:layout_alignLeft="@+id/ivProfile"
        android:text="My name"/>
    <TextView
        android:id="@+id/tvHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_alignLeft="@+id/ivProfile"
        android:text="My Handle"/>


    <TextView
        android:id="@+id/tvNumTweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHandle"
        android:layout_alignLeft="@+id/ivProfile"
        android:text="500 Tweets"/>

    <TextView
        android:id="@+id/tvNumFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHandle"
        android:layout_centerInParent="true"
        android:text="Num Following"/>

    <TextView
        android:id="@+id/tvNumFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHandle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="Num Followers"/>



    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHandle"
        android:layout_marginTop="20dp"
        android:id="@+id/tabsProfile"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabsProfile"
        android:id="@+id/vpProfile"/>

</RelativeLayout>